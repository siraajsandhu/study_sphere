{{!-- posting question --}}
<div class="container">
  <h2>post new question</h2>

  {{> message}}

  <form action="/new_question" method="POST">
    <div class="form-group">
      {{!--<label for="question_title">title</label>--}}
      <input type="text" class="form-control" id="question_title" name="question_title" value="{{question_title}}" placeholder="title" required>
    </div>
    <div class="form-group">
      {{!--<label for="questions_content">the content</label>--}}
      <textarea class="form-control" id="questions_content" name="questions_content" rows="5" placeholder="the question is about ..."  required>{{questions_info}}</textarea>
    </div>
    <div class="form-group">
      <label for="class_prefs">class</label>
      <select multiple class="form-control" id="class_prefs" name="class_prefs">
        {{#each classes}}
          <option value="{{this}}" {{#if (isSelected this ../selected_classes)}}selected{{/if}}>{{this}}</option>
        {{/each}}
      </select>
    </div>
    <button type="submit" class="btn btn-primary">post this question</button>
  </form>
</div>