<div class="container-fluid d-flex flex-column w-100 p-4">
  <div class="container-fluid w-75">
    <h1>Welcome to {{classInfo.name}}</h1>
    <p>{{classInfo.desc}}</p>
    
    <form class="" action="/class/{{classInfo.id}}/find" method="POST">
      <input type="hidden" value="{{classInfo.id}}" name="classId"/>
      {{#if user}}
        {{#if joined}}
          <input type="submit" class="btn btn-outline-danger" value="Leave"/>
        {{else}}
          <input type="submit" class="btn btn-outline-secondary" value="Join"/>
        {{/if}}
      {{else}}
        <input type="submit" class="btn btn-outline-secondary" value="Join" disabled/>
      {{/if}}

      <a class="btn btn-outline-primary" href="/class/{{classInfo.id}}/chat">Join the {{classInfo.name}} chat</a>
    </form>

    <ul class="nav nav-tabs mt-2">
        <li class="nav-item">
            <a class="nav-link" href="/class/{{classInfo.id}}/find">Find Question</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="#">Ask Question</a>
        </li>
    </ul>
    
    
    <h3 class="mt-3">Ask a Question</h3>
    
    {{> message}}
    
    <form enctype="multipart/form-data" class="w-100 d-flex flex-column gap-1" method="POST" action="/class/{{classInfo.id}}/ask">
      <div class="row">
        <label for="password" class="col-sm-2 col-form-label">Question Title</label>
        <div class="col-sm-10">
          <textarea required name="title" class="form-control" placeholder="Summarize the gist of your question here."></textarea>
        </div>
      </div>
      <div class="row">
        <label for="password" class="col-sm-2 col-form-label">Question Content</label>
        <div class="col-sm-10">
          <textarea required name="content" class="form-control" placeholder="What is your question? Feel free to go into detail."></textarea>
        </div>
      </div>
      <div class="row">
        <label class="col-sm-2 col-form-label">Upload images if needed</label>
        <div class="col-sm-10">
          <input name="images" type="file" multiple accept="image/png, image/jpeg"/>
        </div>
      </div>
      <div class="d-flex justify-content-end">
        <input type="submit" class="btn btn-primary" value="Post Question">
      </div>
    </form>

  </div>
</div>