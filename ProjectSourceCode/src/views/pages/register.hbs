<div class="container-fluid d-flex align-items-center flex-column m-3 w-100">
    <div class="container-fluid d-flex align-items-center flex-column w-25">
        <h2>
            Join Study Sphere
        </h2>
        {{> message}}
        <form class="c" method="POST" action="/register">    
            <div class="form-group mb-3">
                <label for="user" class="form-label">Username</label>
                <input type="username" name="username" placeholder="Enter a username" required class="form-control"/>
            </div>
            <div class="form-group mb-3">
                <label for="pasword" class="form-label">Password</label>
                <input type="password" name="password" placeholder="Enter a password" required class="form-control"/>
            </div>
            <div class="form-group mb-3">
                <label for="pasword" class="form-label">Confirm password</label>
                <input type="password" name="confirmPassword" placeholder="Enter a password" required class="form-control"/>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn w-100 btn-primary form-control" style="border:none">Register</button>
            </div>
            <div class="form-group mb-3">
                <p class="c">
                    Already have an account? 
                    <a href="./login">Login</a>
                </p>
            </div>
        </form>
    </div>
</div>